@using postSystem.Models
@model HomepageDTO


@{
    ViewData["Title"] = "Home";
    int count = 0;
}

<div class="container mt-4">

    <!-- SLIDER -->
    <div class="slider mb-5">
        <img src="~/img/adds-1.jpg" class="slide active" />

        @foreach (var post in Model.Posts)
        {
            if (count == 10)
            {
                break;
            }

            if (!string.IsNullOrEmpty(post.ImageUrl))
            {
                <img src="@post.ImageUrl" class="slide" />
                count++;
            }
        }
    </div>


    @{
        var randomCategories = Model.Categories
        .OrderBy(x => Guid.NewGuid())
        .Take(2)
        .ToList();
    }


    @* main section *@
    <div class="flex_row w_100">

        <!-- LEFT (70%) -->
        <div class="w_70 flex_column">

            @foreach (var category in randomCategories)
            {
                var posts = Model.Posts
                .Where(p => p.Category == category.Key)
                .Take(4)
                .ToList();

                if (!posts.Any())
                    continue;

                <div class="card mb-4 border_top_secondary">
                    <div class="card-body">

                        <!-- CATEGORY TITLE -->
                        <h3 class="card-title text-center">
                            @category.Key
                        </h3>

                        <!-- POSTS GRID -->
                        <div class="flex_row">

                            @foreach (var post in posts)
                            {
                                <div class="card w-50">
                                    <div class="post-image-card">

                                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                                        {
                                            <img src="@post.ImageUrl" alt="@post.Title" />
                                        }

                                        <div class="post-image-title">
                                            @post.Title
                                        </div>

                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            }

        </div>


        <!-- RIGHT (30%) -->
        <div class="w_30 flex_column">

            <table class="table table-striped table-bordered">
                

                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category</th>
                        <th>Posts</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int index = 1;
                    }

                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@category.Key</td>
                            <td>@category.Value</td>
                        </tr>

                        index++;
                    }
                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="3" class="text-center text-muted">
                            Total Categories: @Model.Categories.Count
                        </td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>


    @{
        int countpost = 1;
    }
    <!-- POSTS GRID -->
    <div class="row g-4">
        @foreach (var post in Model.Posts)
        {
            @if (countpost > 9)
            {
                break;
            }
            else
            {
                countpost++;
            }

            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm">

                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl"
                             class="card-img-top"
                             style="height:220px; object-fit:cover;"
                             alt="@post.Title" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center"
                             style="height:220px;">
                            <span class="text-muted">No Image</span>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold">@post.Title</h5>

                        <small class="text-muted mb-2">
                            @post.CreatedAt.ToString("dd MMM yyyy")
                        </small>

                        <p class="text-muted small mb-3">
                            @post.ViewsCount views · @post.LikesCount likes
                        </p>

                        <a asp-controller="Post"
                           asp-action="Details"
                           asp-route-slug="@post.Slug"
                           class="btn btn-outline-primary mt-auto">
                            Read More
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {

        let currentIndex = 0;
        const slides = document.querySelectorAll(".slide");
        const intervalTime = 3000;

        if (slides.length === 0) return;

        function showSlide(index) {
            slides.forEach(slide => slide.classList.remove("active"));
            slides[index].classList.add("active");
        }

        function nextSlide() {
            currentIndex = (currentIndex + 1) % slides.length;
            showSlide(currentIndex);
        }

        setInterval(nextSlide, intervalTime);
    });
</script>
