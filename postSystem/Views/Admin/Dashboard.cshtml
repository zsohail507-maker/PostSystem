@model IEnumerable<Post>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Admin Dashboard</h2>

        <div class="btn-group">
            <a asp-controller="Admin" asp-action="CreatePost" class="btn btn-primary">
                + Create Post
            </a>
            <a asp-controller="Admin" asp-action="Comments" class="btn btn-outline-secondary">
                Manage Comments
            </a>
            <a asp-action="Logout" class="btn btn-danger">
                Logout
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th class="text-center">Likes</th>
                        <th class="text-center">Views</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@post.Title</td>
                            <td class="text-center">@post.LikesCount</td>
                            <td class="text-center">@post.ViewsCount</td>
                            <td class="text-center">
                                @if (post.IsPublished)
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Draft</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
