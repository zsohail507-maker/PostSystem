@model postSystem.Models.AddPost
@{
    ViewData["Title"] = "Create Post";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Create New Post</h5>
                </div>

                <div class="card-body">
                    <form asp-action="CreatePost"
                          method="post"
                          enctype="multipart/form-data">

                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Post Image</label>
                            <input asp-for="Image" type="file" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select asp-for="Category" class="form-select" id="categorySelect" required>
                                <option value="">-- Select category --</option>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var c in (List<string>)ViewBag.Categories)
                                    {
                                        <option value="@c">@c</option>
                                    }
                                }
                                <option value="Other">Other</option>
                            </select>

                            <div id="newCategoryWrapper" class="mt-2" style="display:none;">
                                <input asp-for="NewCategory" class="form-control" placeholder="Enter new category name" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="6" required></textarea>
                        </div>

                        <!-- All posts are published by default; publish checkbox removed -->

                        <div class="d-flex justify-content-between">
                            <a asp-action="Dashboard" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                Save Post
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>

<script>
    (function () {
        var select = document.getElementById('categorySelect');
        var wrapper = document.getElementById('newCategoryWrapper');
        function toggle() {
            if (!select) return;
            if (select.value === 'Other') {
                wrapper.style.display = 'block';
            } else {
                wrapper.style.display = 'none';
            }
        }
        if (select) {
            select.addEventListener('change', toggle);
            // run once on load
            toggle();
        }
    })();
</script>
