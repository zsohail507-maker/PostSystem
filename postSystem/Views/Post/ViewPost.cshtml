@model postSystem.Models.Entities.Posts
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>View Post</title>
    <!-- Bootstrap 5 CDN -->
    <link href="~/css/ViewPost.css" rel="stylesheet">
   
</head>
<body>

    <div class="container-fluid container-split">

        <!-- Left Pane: Post Details -->
        <div class="left-pane">
            <h3 class="text-primary">@Model.Owner</h3>
            <h3 class="text-primary">@Model.name</h3>
            <p class="mt-4">@Model.description</p>

            <p class="text-secondary">Posted on: @Model.createdAt.Value.ToString("MMMM dd, yyyy")</p>

            <div class="mt-4">
                <a asp-action="EditPost" asp-route-id="@Model.Id" class="btn btn-warning me-2">Update Post</a>
                <button class="btn btn-danger">Delete Post</button>
            </div>
        </div>

        <!-- Right Pane: Comments List -->
        <div class="right-pane">
            <h4 class="mb-4 text-secondary">Comments</h4>

            @foreach (var comment in Model.Comments)
            {
                <div class="card comment-card shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title mb-1">@comment.Owner</h6>
                        <p class="card-text">@comment.description</p>
                        <p class="text-secondary">Posted on: @comment.createdAt.Value.ToString("MMMM dd, yyyy")</p>
                        <button class="btn btn-sm btn-outline-primary me-2">Update</button>
                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                    </div>
                </div>
            }
           

            


        </div>
    </div>

    <!-- Bootstrap JS (Optional) -->
    
</body>
</html>
