@model postSystem.Models.AddPost
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Posts</title>
    

</head>
<body>
 <div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Post</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddPost" method="post">
                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="name" class="form-label fw-bold">Title</label>
                            <input asp-for="name" class="form-control" placeholder="Enter post title" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="description" class="form-control" rows="4" placeholder="Enter post description"></textarea>
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Submit
                            </button>
                            <a asp-action="Dashboard" class="btn btn-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 


</body>
</html>
